.summary .title{
    font-size: 16px;
    margin: 15px 0;
}
.summary .content{
    text-indent: 2em;
}
.film-item{
    width: 100%;
    padding: 10px;
    display: flex;
}
.film-image{
    width: 120px;
}
.film-image image{
    width: 100%;
    height: 180px;
}
.film-info{
    padding-left: 10px;
    flex: 1;
}
.film-info view{
    margin-bottom: 10px;
}
.film-info .label{
    margin-right: 5px;
}
.film-info .rating{
    color: #e09015;
}
.film-title{
    font-size: 18px;
    margin-right: 10px;
}
.film-year{
    font-size: 16px;
    color: #999;
}
.person{
    margin-right: 5px;
}